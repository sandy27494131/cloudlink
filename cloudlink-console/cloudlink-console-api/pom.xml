	<build>
		<plugins>
			<!-- war打包插件, 设定war包名称不带版本号 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warName>cloudlink</warName>
					<webResources>
						<resource>
							<directory>src/main/webapp</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			
			<!-- resources插件 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
			</plugin>
			
			
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>make-ui-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							zip文件名不包含assembly后缀
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>cloudlink-console/cloudlink-console-${project.version}_${maven.build.timestamp}/cloudlink-console-ui</finalName>
							<descriptor>src/assembly/ui-assembly.xml</descriptor>
						</configuration>
					</execution>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<!-- zip文件名不包含assembly后缀 -->
							<appendAssemblyId>false</appendAssemblyId>
							<finalName>cloudlink-console/cloudlink-console-${project.version}_${maven.build.timestamp}</finalName>
							<descriptor>src/assembly/assembly.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
